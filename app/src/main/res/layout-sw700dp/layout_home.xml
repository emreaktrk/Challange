<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".CategoriesActivity">

    <fragment
        android:id="@id/layout_home_fragment_category"
        android:name="com.akturk.challenge.fragment.CategoryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"/>

    <fragment
        android:id="@id/layout_home_fragment_picture"
        android:name="com.akturk.challenge.fragment.PictureFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@android:color/holo_blue_bright"/>

</LinearLayout>
